# Backend Docker Environment Configuration

# Server Configuration
NODE_ENV=production
BACKEND_PORT=5000

# Database Configuration
DB_HOST=database
DB_PORT=3306
DB_NAME=vmms
DB_USER=vmms_user
DB_PASSWORD=vmms_password_change_me
DB_ROOT_PASSWORD=root_password_change_me

# Security
SESSION_SECRET=your-session-secret-change-me
JWT_SECRET=your-jwt-secret-change-me
JWT_EXPIRES_IN=24h

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3001

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# File Upload
FILE_UPLOAD_LIMIT=50mb

# QR Code Settings
QR_CODE_SIZE=200

# Organization Settings
ORGANIZATION_NAME=VMMS
ORGANIZATION_LOGO_URL=
